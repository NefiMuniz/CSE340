<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <% } else { res.redirect('/') } %>

    <%- messages() %>

<div class="management"><br>
  <!-- First name and update link for everyone logged in -->
  <h2>Welcome <%= accountData.account_firstname %></h2><br>
  <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p><br>
  <!-- Show inventory management section only for Employee or Admin logged in-->
  <% if (accountData.account_type==='Employee' || accountData.account_type==='Admin' ) { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Access the Inventory Management View</a></p><br>
    <% } %>
</div>